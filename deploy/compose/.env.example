# Environment variables for Trusted Services and Delphes Deployment
# Copy this file to .env.production and customize for your environment

# ============================================================================
# Backend Configuration
# ============================================================================
PYTHONUNBUFFERED=1
BACKEND_HOST=0.0.0.0

# ============================================================================
# Scaleway Cloud Provider (if using Scaleway services)
# ============================================================================
SCW_PROJECT_ID=your_scaleway_project_id
SCW_SECRET_KEY=your_scaleway_secret_key

# ============================================================================
# API Configuration
# ============================================================================
API_BASE_URL=http://backend:8002
API_HEALTH_CHECK_URL=http://backend:8002/api/health

# ============================================================================
# Frontend Configuration
# ============================================================================
NEXT_TELEMETRY_DISABLED=1
FRONTEND_PORT=3006
NGINX_HTTP_PORT=8082

# ============================================================================
# Streamlit Configuration
# ============================================================================
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# ============================================================================
# Node Environment
# ============================================================================
COMPOSE_PROJECT_NAME=delphes
NODE_ENV=production
APP_ENV=production

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:${FRONTEND_PORT}

# ============================================================================
# Watsonx Orchestrate Configuration (for demo purposes)
# ============================================================================
NEXT_PUBLIC_WATSON_REGION=us-south
NEXT_PUBLIC_WATSON_INSTANCE_ID=your-watson-instance-id
NEXT_PUBLIC_WATSON_INTEGRATION_ID=your-watson-integration-id
NEXT_PUBLIC_WATSON_AGENT_ID=your-watson-agent-id
BACKEND_INTERNAL_URL=http://localhost:8002

# ============================================================================
# Email Configuration
# ============================================================================
# Email pass key for app app123 sender email address
EMAIL_PASSWORD_APP123=your_email_password_app123
# Email pass key for app app456 sender email address
EMAIL_PASSWORD_APP456=your_email_password_app456